#!/bin/bash
#  ----------------------------------------------------------------
#  re-arm /opt/template0/deb; n.b. cp omits .git
#  ----------------------------------------------------------------
echo start postinst e9a77bc3
echo Postinst works in `pwd`
mkdir -p /opt/CPC/lib

pushd /opt/CPC/lib
p7zip -d /opt/CPC/distr/BlackBox-2207-core.7z
popd

if [ -d /opt ] 
then 
	df /opt
fi
mkdir -p /usr/local/share/applications
ln -s /opt/CPC/share/applications/CPC.desktop /usr/local/share/applications/CPC.desktop

mkdir -p /tmp/cpc
cd /tmp/cpc
env WINEPREFIX=/tmp/cpc/.wine wine /opt/CPC/lib/BlackBox.exe /O /opt/CPC/doc/SetupAutostart.odc /USE . &

echo finish postinst 32043df4

